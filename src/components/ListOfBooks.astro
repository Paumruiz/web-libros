---
import BookItem from "./BookItem.astro"
/*import { books } from '../data/books'*/
import { getBooks } from "../data/notion";

const books = await getBooks()
---

<ul class="grid grid-cols-2 md:grid-cols-3 gap-7 px-4">
    {
        books.map(({id, title, img}) => {
            return(
                <li>
                    <BookItem id={id} title={title} img={img} />
                </li>
            )
        })
    }
</ul>